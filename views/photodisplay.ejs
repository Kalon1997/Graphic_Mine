  <body>

      <!-- __________________________________nav bar_ -->
      <nav class="navbar navbar-expand-sm navbar-style ">
        <a href="/" class="navbar-brand graphicmine-text">Graphic_Mine</a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#menu">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="menu">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a href="/feed" class="nav-link nav-link-style">Feed</a>
            </li>
            <li>
              <a href="/contact" class="nav-link nav-link-style">Contact</a>
            </li>
             <% if (!isAuthed) { %>
               <li>
                 <a href="/login" class="nav-link nav-link-style ">Login</a>
               </li>
              <% } else { %>
                <li>
                    <a href="/addProd" class="nav-link nav-link-style ">Add products</a>
                </li>
                <li>
                  <a href="/user/<%= currUserId %>" class="nav-link nav-link-style ">Me</a>
                </li>
                <li>
                  <form class="logout" action="/logout" method="post">
           
                  <button type="submit" method="POST" class="btn btn-primary btn-sm nav-link-style">Logout</button>
                  </form>
                </li>
              <% } %>
          </ul>
        <!-- </div> -->
      </nav>
  


    <!-- =======================================  search bar  -->

    <div class="search-bar">
        <form action="/searching" method="GET" style="width: 500px; margin: auto" enctype="multipart/form-data">
            <!-- <label class="labels" for="search_bar">Search Bar</label> -->
            <input type="text" name="search_bar" id="search_bar" placeholder="Search..">

            <button type="submit" class="btn btn-outline-primary">search</button>
        </form>
        <% if(isAuthed) { %>
        <form action="/photos" method="GET">
       
          <button type="submit" class="btn btn-primary">Add photo</button>
        </form>
       <% } %> 
    </div>

    

<!-- =================================================  photo display below -->

<div class="grid">
  <div class="row">
        <% if (prods.length > 0) { %>


             <% for (let product of prods) { %>

                 <div class="card col-lg-3 col-md-2 col-sm-1">
                  <img width="18%" height="50%" class="card-img-top" src=" <%= product.imageUrl %> " alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">  <%= product.title %> </h5>
                            <p class="card-text"> <%= product.desp %> </p>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                              </div>
                          </div>
              <% } %>


          <!-- <%  %> -->
      </div>
   </div>
        <% } else { %>
                             <h1>No Products Found!</h1>
      <% } %>


