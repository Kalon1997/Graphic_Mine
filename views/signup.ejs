      </nav>
  

    <!-- ____________________________Signup form -->

  


<form action="/signed_up" method="POST" style="width: 500px; margin: auto">

  <div class="row">
    <div class="col">
      <label class="labels" for="fname">First Name</label>
      <input type="text" name="fname" value="" id="fname" class="form-control">
    </div>
    <div class="col">
      <label class="labels" for="lname">Last Name</label>
      <input type="text" name="lname" value="" id="lname" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label class="labels" for="username">Username</label>
    <input type="text" name="username" value="" id="username" class="form-control">
  </div>
  <div class="form-group">
    <label class="labels" for="password">Password</label>
    <input type="password" name="password" value="" id="password" class="form-control">
  </div>
  <div class="form-group">
 
      <button class="custombtn btn btn-success" type="submit" name="signup">SIGNUP</button>
      <button type="button" class="custombtn2 btn btn-link">forgot password?</button>
  </div>


</form>

